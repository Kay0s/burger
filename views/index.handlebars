<h1>Eat That Burger!</h1>

<h2>Burgers that are not devoured!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{this.burger_name}}

        <form action="/api/burgers/{{this.burger_name}}" method="GET">
            <input type="hidden" name="burger_name" value="{{burger_name}}">
            <button type="submit">Eat that burger!</button>
        </form>

    </li>
    {{/unless}}
    {{/each}}
</ul>



<h2> Burgers that are devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        {{this.name}}

        <form action="/api/burgers/{{this.id}}/" method="DELETE">
            <input type="hidden" name="devoured" value="false">
            <button type="submit">Eat that burger!</button>
        </form>
    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

    <div class="form-group">
        <label for="bur">Burger Name:</label>
        <input type="text" id="na" name="name">
    </div>

    <div class="form-group">
        <label for="dev">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Not Devoured
    </div>

    <button type="submit">Add Burger</button>
</form>
